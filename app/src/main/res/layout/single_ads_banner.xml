<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/single_ads_banner_img_background"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_alignBottom="@id/single_ads_banner_img_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/single_ads_banner_img_ads"
                android:padding="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:id="@+id/single_ads_banner_txt_title"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_alignTop="@id/single_ads_banner_img_ads"
                android:layout_toRightOf="@id/single_ads_banner_img_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_toRightOf="@id/single_ads_banner_img_ads"
                android:layout_below="@id/single_ads_banner_txt_title"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/single_ads_banner_txt_content"
                    android:textSize="11sp"
                    android:layout_marginEnd="40dp"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
