<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:foregroundGravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/single_album_hot_linearlayout"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/single_album_hot_image_album"
                android:scaleType="fitXY"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <TextView
                android:id="@+id/single_album_hot_text_album_name"
                android:maxLines="1"
                android:text="@string/todo"
                android:textColor="#000000"
                android:textSize="20sp"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/single_album_hot_text_singer_name"
                android:maxLines="1"
                android:text="@string/todo"
                android:textSize="16sp"
                android:textColor="#9e9797"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
