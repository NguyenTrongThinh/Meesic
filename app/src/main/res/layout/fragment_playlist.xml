<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Fragment.PlaylistFragment">
        <RelativeLayout
            android:id="@+id/fragment_playlist_relative_feeling_tone"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:paddingStart="10dp"
                android:textSize="22sp"
                android:text="@string/text_playlist_title"
                android:id="@+id/fragment_playlist_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_playlist_text_more"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:layout_marginTop="6dp"
                android:text="@string/text_playlist_more"
                android:gravity="center"
                android:textColor="@android:color/holo_purple"
                android:textSize="18sp" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_playlist_recycle_view_list"
            android:layout_below="@id/fragment_playlist_relative_feeling_tone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</layout>

