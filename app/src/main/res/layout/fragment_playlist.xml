<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".Fragment.PlaylistFragment">
        <TextView
            android:id="@+id/fragment_playlist_text_title"
            android:textColor="#3e3b3b"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/text_playlist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/fragment_playlist_list_playlist"
            android:layout_below="@id/fragment_playlist_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
        <TextView
            android:id="@+id/fragment_playlist_text_more"
            android:text="@string/text_playlist_more"
            android:textSize="19sp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/iconmoreplaylist"
            android:paddingStart="5dp"
            android:layout_below="@id/fragment_playlist_list_playlist"
            android:background="#c9c7c7"
            android:layout_marginTop="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="8dp"
            android:textColor="#0a0a0a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</layout>
