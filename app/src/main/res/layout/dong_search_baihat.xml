<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:layout_margin="3dp"
            android:id="@+id/dong_search_baihat_img"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/dong_search_baihat_text_title"
            android:textColor="#060606"
            android:textSize="16sp"
            android:layout_toRightOf="@id/dong_search_baihat_img"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/dong_search_baihat_text_title"
            android:id="@+id/dong_search_baihat_text_singer"
            android:textColor="#BBB4B4"
            android:textSize="13sp"
            android:layout_toRightOf="@id/dong_search_baihat_img"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</layout>
