<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Fragment.GroupFragment">
        <RelativeLayout
            android:id="@+id/fragment_group_relative_layout_category_type"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:background="#c9c7c7"
                android:textSize="18sp"
                android:text="@string/text_category_title"
                android:id="@+id/fragment_group_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_group_text_more"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:textColor="#913677"
                android:textSize="17sp"
                android:text="@string/text_category_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <HorizontalScrollView
            android:id="@+id/fragment_group_horizontal_scroll_view"
            android:layout_below="@id/fragment_group_relative_layout_category_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </HorizontalScrollView>
    </RelativeLayout>
</layout>
